@model EmployeeSystem.Models.Employee 
<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div class="alert alert-danger">
    <strong>คำเตือน:</strong> ข้อมูลที่ลบแล้วจะกู้คืนไม่ได้นะครับ!
</div>

<div>
    <h4>Employee Details</h4>
    <hr />
    
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Salary)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Salary)
        </dd>
    </dl>
    
    <form asp-action="Delete" method="post">
        <!-- เราต้องแอบยัด ID ใส่กระเป๋าไปด้วยตอนกด Delete ไม่งั้น Controller ฝั่ง POST จะได้ค่า ID เป็น 0 แล้วลบไม่สำเร็จครับ -->
        <input type="hidden" asp-for="EmployeeID" />
        
        <button type="submit" class="btn btn-danger">Delete</button> |
        
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>