@model IEnumerable<EmployeeSystem.Models.Employee>

@{
    ViewData["Title"] = "Employee List";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>รายชื่อพนักงาน</h2>
        <a asp-action="Create" class="btn btn-primary">+ เพิ่มพนักงาน</a>
    </div>

    <form asp-action="Index" method="get">
        <div class="input-group mb-3">
            <input type="text" name="searchString" class="form-control" placeholder="ค้นหาชื่อ...(กรอกเฉพาะชื่อ (ไม่ต้องใส่นามสกุล))" />
            <button class="btn btn-primary" type="submit">Search</button>
            <a asp-action="Index" class="btn btn-secondary">Reset</a>
        </div>
    </form>

    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th>รหัส</th>
                <th>ชื่อ-นามสกุล</th>
                <th>เงินเดือน</th>
                <th>แผนก (ID)</th>
                <th>จัดการ</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.EmployeeID</td>
                    <td>@item.FirstName @item.LastName</td>
                    <td>@item.Salary.ToString("N2")</td>
                    <td>@item.DeptID</td>
                    <td>
                        <!-- ต้องส่ง ID ไปด้วยเดี๋ยวลบไม่ได้ไม่เชื่อดูใน controller --> 
                        <a asp-action="Edit" asp-route-id="@item.EmployeeID" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.EmployeeID" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>