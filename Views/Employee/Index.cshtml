@model IEnumerable<EmployeeSystem.Models.Employee>

@{
    ViewData["Title"] = "Employee List";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>รายชื่อพนักงาน</h2>
        <a asp-action="Create" class="btn btn-primary">+ เพิ่มพนักงาน</a>
    </div>

    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th>รหัส</th>
                <th>ชื่อ-นามสกุล</th>
                <th>เงินเดือน</th>
                <th>แผนก (ID)</th>
                <th>จัดการ</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.EmployeeID</td>
                    <td>@item.FirstName @item.LastName</td>
                    <td>@item.Salary.ToString("N2")</td>
                    <td>@item.DeptID</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.EmployeeID" class="btn btn-warning btn-sm">Edit</a>
                        <a href="#" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>