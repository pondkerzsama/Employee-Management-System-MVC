@model EmployeeSystem.Models.Employee

@{
    ViewData["Title"] = "Edit Employee";
}

<div class="container mt-4">
    <h2>แก้ไขข้อมูลพนักงาน</h2>
    <hr />

    <div class="row">
        <div class="col-md-6">
            <form asp-action="Edit">
                
                <input type="hidden" asp-for="EmployeeID" />

                <div class="mb-3">
                    <label class="form-label">ชื่อ</label>
                    <input asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">นามสกุล</label>
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">เงินเดือน</label>
                    <input asp-for="Salary" class="form-control" type="number" step="0.01" />
                    <span asp-validation-for="Salary" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">รหัสแผนก</label>
                    <input asp-for="DeptID" class="form-control" />
                    <span asp-validation-for="DeptID" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-warning">บันทึกการแก้ไข</button>
                <a asp-action="Index" class="btn btn-secondary">ยกเลิก</a>
            </form>
        </div>
    </div>
</div>